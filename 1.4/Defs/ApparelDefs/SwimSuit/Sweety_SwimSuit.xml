<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="ApparelMakeableBase">
	<defName>Sweety_SwimSuit</defName>
	<label>Sweety SwimSuit</label>
	<description>Colorable swimsuit.\nHowever, it does not differ much from other clothing.</description>
	<graphicData>
		<texPath>BEPFT_Cloth/SwimSuit/SwimSuit</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<techLevel>Medieval</techLevel>
	<costStuffCount>20</costStuffCount>
	<stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
	</stuffCategories>
	<tradeability>Sellable</tradeability>
	<recipeMaker>
		<researchPrerequisite>Sweety_Costumes</researchPrerequisite>
		<recipeUsers>
			<li>Sweety_CraftTable</li>
		</recipeUsers>
	</recipeMaker>
	<thingCategories>
		<li>Sweety_Apparel</li>
	</thingCategories>
	<statBases>
		<MaxHitPoints>200</MaxHitPoints>
		<WorkToMake>1500</WorkToMake>
		<Mass>0.5</Mass>
		<Flammability>0.8</Flammability>
		<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>1.5</StuffEffectMultiplierInsulation_Heat>
		<EquipDelay>2</EquipDelay>
	</statBases>
	<apparel>
		<developmentalStageFilter>Child,Adult</developmentalStageFilter>
		<bodyPartGroups>
			<li>Torso</li>
		</bodyPartGroups>
		<wornGraphicPath>BEPFT_Cloth/SwimSuit/SwimSuit</wornGraphicPath>
		<layers>
			<li>Middle</li>
		</layers>
		<tags>
			<li>Sweety_Apparel</li>
		</tags>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>10</weight>
				<only>(0.19,0.39,1,1)</only>
			</li>
		</options>
	</colorGenerator>
	<comps>
		<li>
			<compClass>CompColorable</compClass>
		</li>
	</comps>
</ThingDef>

</Defs>
