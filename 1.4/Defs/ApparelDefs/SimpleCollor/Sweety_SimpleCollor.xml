<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="ApparelMakeableBase">
	<defName>Sweety_SimpleCollor</defName>
	<label>Sweety SimpleCollor</label>
	<description>This is a collar for Sweety. Sometimes the user prefers to wear it.</description>
	<graphicData>
		<texPath>BEPFT_Cloth/SimpleCollar/SimpleCollar</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<costList>
		<Steel>10</Steel>
	</costList>
	<techLevel>Medieval</techLevel>
	<costStuffCount>10</costStuffCount>
	<stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
	</stuffCategories>
	<tradeability>Sellable</tradeability>
	<recipeMaker>
		<researchPrerequisite>Sweety_Costumes</researchPrerequisite>
		<recipeUsers>
			<li>Sweety_CraftTable</li>
		</recipeUsers>
	</recipeMaker>
	<thingCategories>
		<li>Sweety_Apparel</li>
	</thingCategories>
	<statBases>
		<MaxHitPoints>200</MaxHitPoints>
		<WorkToMake>1500</WorkToMake>
		<Mass>0.06</Mass>
		<Flammability>0.5</Flammability>
		<EquipDelay>1</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.2</SlaveSuppressionOffset>
    </equippedStatOffsets>
	<apparel>
		<developmentalStageFilter>Child,Adult</developmentalStageFilter>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<bodyPartGroups>
			<li>Neck</li>
		</bodyPartGroups>
		<wornGraphicPath>BEPFT_Cloth/SimpleCollar/SimpleCollar</wornGraphicPath>
		<layers>
			<li>Belt</li>
		</layers>
		<tags>
			<li>Sweety_Apparel_Slave</li>
		</tags>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
	<comps>
		<li>
			<compClass>CompColorable</compClass>
		</li>
	</comps>
	<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
</Defs>
