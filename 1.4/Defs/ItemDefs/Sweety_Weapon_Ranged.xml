  <ThingDef Name="Sweety_BaseProjectile" Abstract="True">
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <thingClass>Bullet</thingClass>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
    <graphicData>
      <shaderType>Transparent</shaderType>
    </graphicData>
  </ThingDef>
  
  <ThingDef ParentName="Sweety_BaseWeapon_Ranged">
    <defName>Sweety_MeltMaker</defName>
    <label>Sweety MeltMaker</label>
    <description>This gun is filled with dangerous nanomachine-filled bullets that dissolve the enemy's body.\nA few shots will not have a significant effect on the body, but if the body is hit repeatedly, it will gradually begin to dissolve.</description>
    <graphicData>
      <texPath>Sweety/Thing/Weapon/MeltMaker</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Small</soundInteract>
    <costList>
      <Steel>45</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <MedicineUltratech>3</MedicineUltratech>
      <Sweety_ChocoMilk>10</Sweety_ChocoMilk>
    </costList>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>0.4</Mass>
      <AccuracyTouch>0.86</AccuracyTouch>
      <AccuracyShort>0.56</AccuracyShort>
      <AccuracyMedium>0.36</AccuracyMedium>
      <AccuracyLong>0.26</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>Sweety_LowTier</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
    </weaponClasses>
    <recipeMaker>
      <recipeUsers>
        <li>Sweety_CraftTable</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <researchPrerequisite>Sweety_ChocolatePolymorph</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Sweety_MeltBullet</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>18.9</range>
        <burstShotCount>10</burstShotCount>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>3</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="Sweety_BaseProjectile">
    <defName>Sweety_MeltBullet</defName>
    <label>Melt Bullet</label>
    <thingClass>Sweety_Race.Sweety_MeltBullet</thingClass>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>6</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  
</Defs>